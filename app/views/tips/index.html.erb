<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 mb-8">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Tips for <%= @event.title %></h1>
        <p class="text-gray-600 mt-2">Track and manage all tip contributions for <%= @event.title %></p>
      </div>
      <%= link_to "New Tip", new_event_tip_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200" %>
    </div>
  </div>
  
  <div class="mb-6">
    <%= link_to 'Back to Event', @event, class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200' %>
  </div>

  <% if @tips.any? %>
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-200 bg-gray-50">
              <th class="h-12 px-4 text-left align-middle font-medium text-gray-600 text-sm">Amount</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-gray-600 text-sm">User</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-gray-600 text-sm">Message</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-gray-600 text-sm">Date</th>
              <th class="h-12 px-4 text-left align-middle font-medium text-gray-600 text-sm">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @tips.each_with_index do |tip, index| %>
              <tr class="border-b border-gray-200 transition-colors hover:bg-gray-50 <%= 'bg-gray-25' if index.even? %>">
                <td class="p-4 align-middle">
                  <div class="inline-flex items-center rounded-full border border-green-200 bg-green-100 px-2.5 py-0.5 text-xs font-semibold text-green-800">
                    <%= tip.formatted_amount %>
                  </div>
                </td>
                <td class="p-4 align-middle">
                  <% if tip.user %>
                    <div class="flex items-center space-x-3">
                      <div class="flex h-8 w-8 items-center justify-center rounded-full bg-gray-200 text-gray-700 font-medium text-xs">
                        <%= tip.user.name&.first&.upcase || 'U' %>
                      </div>
                      <div>
                        <div class="font-medium text-gray-900"><%= tip.user.name %></div>
                        <div class="text-xs text-gray-500"><%= tip.user.email %></div>
                      </div>
                    </div>
                  <% else %>
                    <span class="text-gray-500">Anonymous</span>
                  <% end %>
                </td>
                <td class="p-4 align-middle">
                  <% if tip.message.present? %>
                    <div class="max-w-xs text-sm text-gray-900" title="<%= tip.message %>">
                      <%= truncate(tip.message, length: 50) %>
                    </div>
                  <% else %>
                    <span class="text-gray-500 text-sm">No message</span>
                  <% end %>
                </td>
                <td class="p-4 align-middle">
                  <div class="text-sm text-gray-500"><%= tip.created_at.strftime('%B %d, %Y') %></div>
                </td>
                <td class="p-4 align-middle">
                  <div class="flex items-center space-x-2">
                    <%= link_to "View", [@event, tip], class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded-lg transition duration-200" %>
                    <%= link_to "Edit", [:edit, @event, tip], class: "bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium py-1 px-3 rounded-lg transition duration-200" %>
                    <%= button_to "Delete", [@event, tip], method: :delete,
                                  class: "bg-red-600 hover:bg-red-700 text-white text-sm font-medium py-1 px-3 rounded-lg transition duration-200 cursor-pointer",
                                  data: { 
                                    confirm: "Are you sure?",
                                    turbo_method: :delete 
                                  } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm text-center py-16">
      <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-6">
        <svg class="w-8 h-8 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">No tips yet</h3>
      <p class="text-gray-600 mb-6 max-w-sm mx-auto">Start collecting tips for <%= @event.title %>. Track contributions and show appreciation to your audience.</p>
      <div class="space-y-4">
        <%= link_to "Record First Tip", new_event_tip_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200" %>
        <div class="text-xs text-gray-500">
          <span>or</span>
          <a href="#" class="text-blue-600 hover:underline ml-1">learn about tip tracking</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
