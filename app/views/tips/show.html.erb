<div class="container mx-auto p-4 md:p-8">
  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
        <div>
          <h1 class="card-title text-3xl md:text-4xl">Tip Details</h1>
          <p class="text-sm opacity-70 mt-1">Viewing tip information</p>
        </div>
        <div class="flex gap-2">
          <%= link_to [:edit, @event, @tip], class: "btn btn-sm btn-neutral" do %>
            <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
          <% end %>
          <%= button_to [@event, @tip], 
              method: :delete,
              class: "btn btn-sm btn-error btn-outline",
              form: { 
                class: "inline-block m-0",
                data: { 
                  turbo_confirm: "Are you sure you want to delete this tip?",
                  turbo_method: :delete 
                } 
              } do %>
            <svg class="w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Delete
          <% end %>
        </div>
      </div>
      
      <div class="divider"></div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-6">
          <div class="card bg-base-200">
            <div class="card-body p-4">
              <h2 class="text-lg font-semibold flex items-center gap-2 mb-4">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Event Information
              </h2>
              <div class="space-y-4">
                <div>
                  <p class="text-sm font-medium opacity-70">Event</p>
                  <% if @tip.event %>
                    <p class="font-medium">
                      <%= link_to @tip.event.title, @tip.event, class: "link link-primary" %>
                    </p>
                    <p class="text-sm opacity-70 mt-1">
                      <%= @tip.event.start_time.strftime('%B %d, %Y') %>
                      <% if @tip.event.venue.present? %>
                        <br>at <%= @tip.event.venue %>
                      <% end %>
                    </p>
                  <% else %>
                    <p class="opacity-70">No event assigned</p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          
          <div class="card bg-base-200">
            <div class="card-body p-4">
              <h2 class="text-lg font-semibold flex items-center gap-2 mb-4">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Tipper Information
              </h2>
              <div class="space-y-4">
                <div>
                  <p class="text-sm font-medium opacity-70">Tipper Name</p>
                  <% if @tip.user %>
                    <p class="font-medium">
                      <%= link_to @tip.user.name, @tip.user, class: "link link-primary" %>
                    </p>
                  <% else %>
                    <p class="opacity-70">No user assigned</p>
                  <% end %>
                </div>
                
                <div>
                  <p class="text-sm font-medium opacity-70">Email Address</p>
                  <% if @tip.user&.email.present? %>
                    <p class="font-medium">
                      <%= mail_to @tip.user.email, class: "link link-primary" %>
                    </p>
                  <% else %>
                    <p class="opacity-70">Not available</p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="card bg-base-200 h-full">
            <div class="card-body p-4 flex flex-col">
              <h2 class="text-lg font-semibold flex items-center gap-2 mb-4">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Tip Amount
              </h2>
              <div class="flex-grow flex items-center justify-center">
                <p class="text-5xl font-bold text-success"><%= @tip.formatted_amount %></p>
              </div>
            </div>
          </div>
          
          <% if @tip.message.present? %>
            <div class="card bg-base-200">
              <div class="card-body p-4">
                <h2 class="text-lg font-semibold flex items-center gap-2 mb-4">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                  </svg>
                  Message from Tipper
                </h2>
                <div class="bg-base-100 p-4 rounded-lg">
                  <%= simple_format(@tip.message, class: 'whitespace-pre-wrap') %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="divider"></div>
      
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <div class="text-sm opacity-70">
          <p>Created <%= time_ago_in_words(@tip.created_at) %> ago</p>
          <% if @tip.created_at != @tip.updated_at %>
            <p>Updated <%= time_ago_in_words(@tip.updated_at) %> ago</p>
          <% end %>
        </div>
        
        <%= link_to event_tips_path(@event), class: "btn" do %>
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Tips
        <% end %>
      </div>
    </div>
  </div>
</div>
