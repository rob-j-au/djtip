<%= form_with(model: [@event, tip], class: "space-y-6") do |form| %>
  <% if tip.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(tip.errors.count, "error") %> prohibited this tip from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% tip.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, "Tipper (User)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.collection_select :user_id, User.all, :id, :name, 
        { prompt: 'Select a user' }, 
        { class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :amount, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :amount, step: 0.01, min: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :currency, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :currency, 
          options_for_select([
            ['USD', 'USD'],
            ['EUR', 'EUR'],
            ['GBP', 'GBP'],
            ['AUD', 'AUD'],
            ['CAD', 'CAD']
          ], tip.currency), 
          {}, 
          { class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
    </div>
  </div>

  <div>
    <%= form.label :message, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :message, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-vertical", 
        placeholder: "Optional message from the tipper..." %>
  </div>

  <div class="flex space-x-4">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200 cursor-pointer" %>
    <%= link_to 'Cancel', event_tips_path(@event), class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200" %>
  </div>
<% end %>
