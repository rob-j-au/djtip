<%= form_with(model: [@event, tip], class: "space-y-6") do |form| %>
  <% if tip.errors.any? %>
    <div role="alert" class="alert alert-error mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">
          <%= pluralize(tip.errors.count, "error") %> prohibited this tip from being saved:
        </h3>
        <div class="text-sm">
          <ul class="list-disc list-inside space-y-1">
            <% tip.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="form-control w-full">
    <%= form.label :user_id, class: "label" do %>
      <span class="label-text">Tipper (User)</span>
      <span class="label-text-alt">Who left the tip?</span>
    <% end %>
    <%= form.collection_select :user_id, 
                            User.all, 
                            :id, 
                            :name, 
                            { prompt: 'Select a user' }, 
                            { class: "select select-bordered w-full" } %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="form-control w-full">
      <%= form.label :amount, class: "label" do %>
        <span class="label-text">Amount</span>
        <span class="label-text-alt">Required</span>
      <% end %>
      <label class="input-group">
        <span class="bg-base-200 px-4">$</span>
        <%= form.number_field :amount, 
            step: 0.01, 
            min: 0.01, 
            class: "input input-bordered w-full", 
            placeholder: "0.00" %>
      </label>
    </div>

    <div class="form-control w-full">
      <%= form.label :currency, class: "label" do %>
        <span class="label-text">Currency</span>
        <span class="label-text-alt">Select one</span>
      <% end %>
      <%= form.select :currency, 
          options_for_select([
            ['USD - US Dollar', 'USD'],
            ['EUR - Euro', 'EUR'],
            ['GBP - British Pound', 'GBP'],
            ['AUD - Australian Dollar', 'AUD'],
            ['CAD - Canadian Dollar', 'CAD']
          ], tip.currency), 
          { prompt: 'Select currency' }, 
          { class: "select select-bordered w-full" } %>
    </div>
  </div>

  <div class="form-control w-full">
    <%= form.label :message, class: "label" do %>
      <span class="label-text">Message</span>
      <span class="label-text-alt">Optional</span>
    <% end %>
    <%= form.text_area :message, 
        rows: 3, 
        class: "textarea textarea-bordered h-24", 
        placeholder: "Optional message from the tipper..." %>
  </div>

  <div class="flex justify-end mt-8 space-x-3">
    <%= link_to 'Cancel', event_tips_path(@event), class: "btn btn-ghost" %>
    <button type="submit" class="btn btn-primary">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Save Tip
    </button>
  </div>
<% end %>
