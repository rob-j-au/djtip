<div class="p-4">
  <!-- Logo/Brand -->
  <div class="mb-8">
    <%= link_to admin_root_path, class: "flex items-center space-x-3" do %>
      <div class="w-8 h-8 bg-primary rounded-lg flex items-center justify-center">
        <i class="fas fa-tachometer-alt text-primary-content"></i>
      </div>
      <span class="text-lg font-bold text-base-content">Admin Panel</span>
    <% end %>
  </div>

  <!-- Navigation Menu -->
  <ul class="menu p-0 space-y-2">
    <!-- Dashboard -->
    <li>
      <%= link_to admin_root_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors #{current_page?(admin_root_path) ? 'bg-primary text-primary-content' : 'text-base-content hover:bg-base-200'}" do %>
        <i class="fas fa-home w-5"></i>
        <span>Dashboard</span>
      <% end %>
    </li>

    <!-- Events -->
    <li>
      <%= link_to admin_events_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors #{current_page?(admin_events_path) || controller_name == 'events' ? 'bg-primary text-primary-content' : 'text-base-content hover:bg-base-200'}" do %>
        <i class="fas fa-calendar-alt w-5"></i>
        <span>Events</span>
        <div class="badge badge-primary badge-sm ml-auto"><%= Event.count %></div>
      <% end %>
    </li>

    <!-- Users -->
    <li>
      <%= link_to admin_users_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors #{current_page?(admin_users_path) || controller_name == 'users' ? 'bg-primary text-primary-content' : 'text-base-content hover:bg-base-200'}" do %>
        <i class="fas fa-users w-5"></i>
        <span>Users</span>
        <div class="badge badge-primary badge-sm ml-auto"><%= User.count %></div>
      <% end %>
    </li>

    <!-- Performers -->
    <li>
      <%= link_to admin_performers_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors #{current_page?(admin_performers_path) || controller_name == 'performers' ? 'bg-primary text-primary-content' : 'text-base-content hover:bg-base-200'}" do %>
        <i class="fas fa-microphone w-5"></i>
        <span>Performers</span>
        <div class="badge badge-primary badge-sm ml-auto"><%= Performer.count %></div>
      <% end %>
    </li>

    <!-- Tips -->
    <li>
      <%= link_to admin_tips_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg transition-colors #{current_page?(admin_tips_path) || controller_name == 'tips' ? 'bg-primary text-primary-content' : 'text-base-content hover:bg-base-200'}" do %>
        <i class="fas fa-dollar-sign w-5"></i>
        <span>Tips</span>
        <div class="badge badge-success badge-sm ml-auto">$<%= Tip.sum(:amount).to_i %></div>
      <% end %>
    </li>

    <!-- Divider -->
    <li><div class="divider my-4"></div></li>

    <!-- Quick Actions -->
    <li class="menu-title">
      <span class="text-base-content/70">Quick Actions</span>
    </li>
    
    <li>
      <%= link_to new_admin_event_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg text-base-content hover:bg-base-200 transition-colors" do %>
        <i class="fas fa-plus w-5"></i>
        <span>New Event</span>
      <% end %>
    </li>
    
    <li>
      <%= link_to new_admin_user_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg text-base-content hover:bg-base-200 transition-colors" do %>
        <i class="fas fa-user-plus w-5"></i>
        <span>New User</span>
      <% end %>
    </li>
    
    <li>
      <%= link_to new_admin_performer_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg text-base-content hover:bg-base-200 transition-colors" do %>
        <i class="fas fa-microphone-alt w-5"></i>
        <span>New Performer</span>
      <% end %>
    </li>

    <!-- Divider -->
    <li><div class="divider my-4"></div></li>

    <!-- System -->
    <li class="menu-title">
      <span class="text-base-content/70">System</span>
    </li>
    

    
    <li>
      <%= link_to root_path, 
          class: "flex items-center space-x-3 px-4 py-3 rounded-lg text-base-content hover:bg-base-200 transition-colors" do %>
        <i class="fas fa-external-link-alt w-5"></i>
        <span>Main Site</span>
      <% end %>
    </li>
  </ul>
</div>
