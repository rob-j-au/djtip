<%= form_with model: [:admin, @event], local: true, class: "space-y-6" do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">Please fix the following errors:</h3>
        <ul class="list-disc list-inside mt-2">
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Left Column -->
    <div class="space-y-6">
      <!-- Title -->
      <div class="form-control">
        <%= f.label :title, class: "label" do %>
          <span class="label-text font-semibold">Event Title *</span>
        <% end %>
        <%= f.text_field :title, 
            class: "input input-bordered w-full #{'input-error' if @event.errors[:title].any?}",
            placeholder: "Enter event title..." %>
        <% if @event.errors[:title].any? %>
          <div class="label">
            <span class="label-text-alt text-error"><%= @event.errors[:title].first %></span>
          </div>
        <% end %>
      </div>

      <!-- Location -->
      <div class="form-control">
        <%= f.label :location, class: "label" do %>
          <span class="label-text font-semibold">Location *</span>
        <% end %>
        <%= f.text_field :location, 
            class: "input input-bordered w-full #{'input-error' if @event.errors[:location].any?}",
            placeholder: "Enter event location..." %>
        <% if @event.errors[:location].any? %>
          <div class="label">
            <span class="label-text-alt text-error"><%= @event.errors[:location].first %></span>
          </div>
        <% end %>
      </div>

      <!-- Date and Time -->
      <div class="form-control">
        <%= f.label :date, class: "label" do %>
          <span class="label-text font-semibold">Date & Time *</span>
        <% end %>
        <%= f.datetime_local_field :date, 
            class: "input input-bordered w-full #{'input-error' if @event.errors[:date].any?}" %>
        <% if @event.errors[:date].any? %>
          <div class="label">
            <span class="label-text-alt text-error"><%= @event.errors[:date].first %></span>
          </div>
        <% end %>
        <div class="label">
          <span class="label-text-alt">Select the date and time for your event</span>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div class="space-y-6">
      <!-- Description -->
      <div class="form-control">
        <%= f.label :description, class: "label" do %>
          <span class="label-text font-semibold">Description</span>
        <% end %>
        <%= f.text_area :description, 
            class: "textarea textarea-bordered h-32 #{'textarea-error' if @event.errors[:description].any?}",
            placeholder: "Describe your event..." %>
        <% if @event.errors[:description].any? %>
          <div class="label">
            <span class="label-text-alt text-error"><%= @event.errors[:description].first %></span>
          </div>
        <% end %>
        <div class="label">
          <span class="label-text-alt">Optional: Provide additional details about the event</span>
        </div>
      </div>

      <!-- Event Preview Card -->
      <div class="card bg-base-200 border border-base-300">
        <div class="card-body">
          <h3 class="card-title text-sm">
            <i class="fas fa-eye mr-2"></i>
            Preview
          </h3>
          <div class="space-y-2 text-sm">
            <div class="flex items-center space-x-2">
              <i class="fas fa-calendar-alt text-primary w-4"></i>
              <span id="preview-date" class="text-base-content/70">
                <%= @event.date ? @event.date.strftime("%B %d, %Y at %I:%M %p") : "Date not set" %>
              </span>
            </div>
            <div class="flex items-center space-x-2">
              <i class="fas fa-map-marker-alt text-primary w-4"></i>
              <span id="preview-location" class="text-base-content/70">
                <%= @event.location.present? ? @event.location : "Location not set" %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="card bg-base-100 border border-base-300">
    <div class="card-body">
      <div class="flex justify-between items-center">
        <div class="text-sm text-base-content/70">
          <i class="fas fa-info-circle mr-1"></i>
          Fields marked with * are required
        </div>
        <div class="flex space-x-3">
          <%= link_to "Cancel", @event.persisted? ? admin_event_path(@event) : admin_events_path, 
              class: "btn btn-ghost" %>
          <%= f.submit @event.persisted? ? "Update Event" : "Create Event", 
              class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script>
  // Live preview updates
  document.addEventListener('DOMContentLoaded', function() {
    const titleField = document.getElementById('event_title');
    const locationField = document.getElementById('event_location');
    const dateField = document.getElementById('event_date');
    
    const previewLocation = document.getElementById('preview-location');
    const previewDate = document.getElementById('preview-date');
    
    if (locationField && previewLocation) {
      locationField.addEventListener('input', function() {
        previewLocation.textContent = this.value || 'Location not set';
      });
    }
    
    if (dateField && previewDate) {
      dateField.addEventListener('input', function() {
        if (this.value) {
          const date = new Date(this.value);
          previewDate.textContent = date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
            hour: 'numeric',
            minute: '2-digit'
          });
        } else {
          previewDate.textContent = 'Date not set';
        }
      });
    }
  });
</script>
