<% content_for :breadcrumbs do %>
  <li><%= link_to "Events", admin_events_path %></li>
  <li><%= link_to @event.title, admin_event_path(@event) %></li>
  <li>Edit</li>
<% end %>

<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mr-4">
          <i class="fas fa-edit text-primary text-xl"></i>
        </div>
        <div>
          <h2 class="card-title text-2xl">Edit Event</h2>
          <p class="text-base-content/70">Update event details for "<%= @event.title %>"</p>
        </div>
      </div>
      
      <div class="flex space-x-2">
        <%= link_to admin_event_path(@event), class: "btn btn-ghost btn-sm" do %>
          <i class="fas fa-eye mr-2"></i>
          View Event
        <% end %>
      </div>
    </div>

    <%= render 'form' %>
  </div>
</div>
