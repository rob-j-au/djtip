<% content_for :breadcrumbs do %>
  <li><%= link_to "Tips", admin_tips_path %></li>
  <li>Tip #<%= @tip.id.to_s.last(8) %></li>
<% end %>

<% content_for :page_actions do %>
  <div class="flex space-x-2">
    <%= link_to admin_tips_path, class: "btn btn-ghost btn-sm" do %>
      <i class="fas fa-arrow-left mr-2"></i>
      Back to Tips
    <% end %>
    <%= link_to edit_admin_tip_path(@tip), class: "btn btn-primary btn-sm" do %>
      <i class="fas fa-edit mr-2"></i>
      Edit Tip
    <% end %>
    <%= link_to admin_tip_path(@tip), class: "btn btn-error btn-sm", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this tip?" } do %>
      <i class="fas fa-trash mr-2"></i>
      Delete
    <% end %>
  </div>
<% end %>

<!-- Tip Details -->
<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <div class="flex items-start justify-between mb-6">
      <div class="flex items-center space-x-4">
        <div class="avatar placeholder">
          <div class="bg-success text-success-content rounded-full w-16">
            <span class="text-2xl">$</span>
          </div>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-base-content">$<%= @tip.amount.to_f %></h1>
          <p class="text-base-content/70">Tip #<%= @tip.id.to_s.last(8) %></p>
          <div class="flex items-center space-x-1 mt-2 text-base-content/70">
            <i class="fas fa-clock"></i>
            <span><%= @tip.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Tip Information Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- User Information -->
      <div class="card bg-base-200 shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-lg">
            <i class="fas fa-user mr-2"></i>
            User Details
          </h2>
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <div class="avatar placeholder">
                <div class="bg-primary text-primary-content rounded-full w-10">
                  <span class="text-sm"><%= @tip.user.name.first.upcase %></span>
                </div>
              </div>
              <div>
                <div class="font-semibold">
                  <%= link_to @tip.user.name, admin_user_path(@tip.user), class: "hover:text-primary" %>
                </div>
                <div class="text-sm text-base-content/70"><%= @tip.user.email %></div>
                <% if @tip.user.admin? %>
                  <div class="badge badge-warning badge-xs mt-1">Admin</div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Event Information -->
      <div class="card bg-base-200 shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-lg">
            <i class="fas fa-calendar-alt mr-2"></i>
            Event Details
          </h2>
          <div class="space-y-3">
            <div>
              <div class="font-semibold">
                <%= link_to @tip.event.title, admin_event_path(@tip.event), class: "hover:text-primary" %>
              </div>
              <div class="text-sm text-base-content/70">
                <i class="fas fa-map-marker-alt mr-1"></i>
                <%= @tip.event.location %>
              </div>
              <div class="text-sm text-base-content/70">
                <i class="fas fa-clock mr-1"></i>
                <%= @tip.event.date.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
              <% if @tip.event.date < Time.current %>
                <div class="badge badge-ghost badge-sm mt-1">Past Event</div>
              <% elsif @tip.event.date < 1.week.from_now %>
                <div class="badge badge-warning badge-sm mt-1">Upcoming Soon</div>
              <% else %>
                <div class="badge badge-success badge-sm mt-1">Upcoming</div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Information -->
    <div class="mt-6">
      <div class="stats stats-vertical lg:stats-horizontal shadow w-full">
        <div class="stat">
          <div class="stat-figure text-primary">
            <i class="fas fa-dollar-sign text-2xl"></i>
          </div>
          <div class="stat-title">Amount</div>
          <div class="stat-value text-primary">$<%= @tip.amount.to_f %></div>
          <div class="stat-desc">Tip amount</div>
        </div>
        
        <div class="stat">
          <div class="stat-figure text-secondary">
            <i class="fas fa-calendar text-2xl"></i>
          </div>
          <div class="stat-title">Created</div>
          <div class="stat-value text-secondary text-lg"><%= time_ago_in_words(@tip.created_at) %></div>
          <div class="stat-desc">ago</div>
        </div>
        
        <div class="stat">
          <div class="stat-figure text-accent">
            <i class="fas fa-hashtag text-2xl"></i>
          </div>
          <div class="stat-title">Tip ID</div>
          <div class="stat-value text-lg font-mono flex items-center gap-2">
            <span><%= @tip.id.to_s.last(8) %></span>
            <button class="btn btn-ghost btn-xs" 
                    data-controller="clipboard"
                    data-clipboard-text-value="<%= @tip.id %>"
                    data-action="click->clipboard#copy">
              <i class="fas fa-copy"></i>
            </button>
          </div>
          <div class="stat-desc">Last 8 characters</div>
        </div>
      </div>
    </div>
  </div>
</div>
