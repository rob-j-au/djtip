<% content_for :breadcrumbs do %>
  <li><%= link_to "Tips", admin_tips_path %></li>
  <li><%= link_to "Tip ##{@tip.id.to_s.last(8)}", admin_tip_path(@tip) %></li>
  <li>Edit</li>
<% end %>

<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center">
        <div class="w-12 h-12 bg-success/10 rounded-lg flex items-center justify-center mr-4">
          <i class="fas fa-edit text-success text-xl"></i>
        </div>
        <div>
          <h2 class="card-title text-2xl">Edit Tip</h2>
          <p class="text-base-content/70">Update tip details for $<%= number_with_precision(@tip.amount, precision: 2) %> tip</p>
        </div>
      </div>
      
      <div class="flex space-x-2">
        <%= link_to admin_tip_path(@tip), class: "btn btn-ghost btn-sm" do %>
          <i class="fas fa-eye mr-2"></i>
          View Tip
        <% end %>
      </div>
    </div>

    <%= render 'form', tip: @tip %>
  </div>
</div>
