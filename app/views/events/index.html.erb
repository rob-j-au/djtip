<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Events</h1>
  <%= link_to "New Event", new_event_path, class: "btn btn-primary" %>
</div>

<div class="row">
  <% @events.each do |event| %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <p class="card-text"><%= truncate(event.description, length: 100) %></p>
          <p class="text-muted">
            <i class="fas fa-calendar"></i> <%= event.date&.strftime("%B %d, %Y at %I:%M %p") %>
          </p>
          <p class="text-muted">
            <i class="fas fa-map-marker-alt"></i> <%= event.location %>
          </p>
        </div>
        <div class="card-footer bg-transparent">
          <div class="btn-group w-100" role="group">
            <%= link_to "View", event, class: "btn btn-outline-primary btn-sm" %>
            <%= link_to "Edit", edit_event_path(event), class: "btn btn-outline-secondary btn-sm" %>
            <%= form_with model: event, method: :delete, local: true, class: "d-inline" do |form| %>
              <%= form.submit "Delete", class: "btn btn-outline-danger btn-sm",
                              onclick: "return confirm('Are you sure you want to delete this event?')" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @events.empty? %>
  <div class="text-center py-5">
    <h3 class="text-muted">No events yet</h3>
    <p class="text-muted">Create your first event to get started!</p>
    <%= link_to "Create Event", new_event_path, class: "btn btn-primary" %>
  </div>
<% end %>
