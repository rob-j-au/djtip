<div class="card bg-base-100 shadow-xl mb-8">
  <div class="card-body">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
      <div>
        <h1 class="card-title text-4xl">Events</h1>
        <p class="text-base-content/70 mt-1">Manage and view all your DJ events</p>
      </div>
      <%= link_to "New Event", new_event_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% if @events.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @events.each do |event| %>
      <div class="card bg-base-100 shadow-md hover:shadow-xl transition-shadow duration-200 border border-base-200">
        <div class="card-body p-6">
          <div class="flex justify-between items-start gap-4 mb-4">
            <h3 class="card-title text-xl"><%= event.title %></h3>
            <div class="badge badge-primary">
              Active
            </div>
          </div>
          
          <p class="text-base-content/80 mb-6 text-sm"><%= truncate(event.description, length: 100) %></p>
          
          <div class="space-y-3 mb-6">
            <div class="flex items-center text-sm">
              <svg class="w-4 h-4 mr-3 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span><%= event.date&.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
            <div class="flex items-center text-sm">
              <svg class="w-4 h-4 mr-3 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span><%= event.location %></span>
            </div>
          </div>
          
          <div class="card-actions justify-end">
            <div class="flex gap-2 w-full">
              <%= link_to "View", event, class: "btn btn-sm btn-ghost flex-1" %>
              <%= link_to "Edit", edit_event_path(event), class: "btn btn-sm btn-outline flex-1" %>
              <%= button_to "Delete", event, method: :delete, 
                            class: "btn btn-sm btn-outline btn-error flex-1",
                            form_class: "flex-1",
                            data: { 
                              confirm: "Are you sure you want to delete this event?",
                            turbo_method: :delete 
                          } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-white rounded-lg border border-gray-200 shadow-sm text-center py-16">
    <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-6">
      <svg class="w-8 h-8 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
    <h3 class="text-lg font-semibold text-gray-900 mb-2">No events yet</h3>
    <p class="text-gray-600 mb-6 max-w-sm mx-auto">Get started by creating your first DJ event. You can manage performers, track tips, and more.</p>
    <div class="space-y-4">
      <%= link_to "Create Your First Event", new_event_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition duration-200" %>
    </div>
  </div>
<% end %>
