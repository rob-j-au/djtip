<%= form_with(model: event, local: true, class: "row g-3") do |form| %>
  <% if event.errors.any? %>
    <div class="col-12">
      <div class="alert alert-danger">
        <h6><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h6>
        <ul class="mb-0">
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :date, class: "form-label" %>
    <%= form.datetime_local_field :date, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", events_path, class: "btn btn-secondary" %>
  </div>
<% end %>
