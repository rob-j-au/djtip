<%= form_with(model: event, class: "space-y-6") do |form| %>
  <% if event.errors.any? %>
    <div role="alert" class="alert alert-error mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">
          <%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:
        </h3>
        <div class="text-sm">
          <ul class="list-disc list-inside space-y-1">
            <% event.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Basic Information</legend>
    
    <div class="form-control w-full">
      <%= form.label :title, class: "label" do %>
        <span class="label-text">Event Title</span>
        <span class="label-text-alt">Required</span>
      <% end %>
      <%= form.text_field :title, class: "input input-bordered w-full", placeholder: "Enter event title" %>
    </div>

    <div class="form-control w-full mt-4">
      <%= form.label :location, class: "label" do %>
        <span class="label-text">Location</span>
        <span class="label-text-alt">Optional</span>
      <% end %>
      <%= form.text_field :location, class: "input input-bordered w-full", placeholder: "Enter event location" %>
    </div>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Date & Time</legend>
    
    <div class="form-control w-full">
      <%= form.label :date, class: "label" do %>
        <span class="label-text">Event Date & Time</span>
        <span class="label-text-alt">Select date and time using the native picker</span>
      <% end %>
      <div class="relative">
        <%= form.datetime_local_field :date, 
            value: (@event.date ? @event.date.strftime("%Y-%m-%dT%H:%M") : ""),
            id: "datepicker-#{form.object_name}",
            datepicker: true,
            class: "input input-bordered w-full",
            placeholder: "Select date and time" %>
      </div>
    </div>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Event Details</legend>
    
    <div class="form-control w-full">
      <%= form.label :description, class: "label" do %>
        <span class="label-text">Event Description</span>
        <span class="label-text-alt">Tell us about the event</span>
      <% end %>
      <%= form.text_area :description, 
          rows: 4, 
          class: "textarea textarea-bordered h-24", 
          placeholder: "Enter event details, special instructions, or other relevant information" %>
    </div>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Performers</legend>
    
    <div class="form-control w-full">
      <%= form.label :user_ids, class: "label" do %>
        <span class="label-text">Select Performers</span>
        <span class="label-text-alt">Choose performers for this event</span>
      <% end %>
      
      <% if Performer.count > 0 %>
        <div class="bg-base-100 border border-base-300 rounded-lg p-4 max-h-64 overflow-y-auto">
          <div class="space-y-2">
            <% Performer.all.each do |performer| %>
              <label class="cursor-pointer label justify-start gap-3 p-2 hover:bg-base-200 rounded-lg transition-colors">
                <%= check_box_tag 'event[user_ids][]', performer.id, 
                    event.users.include?(performer), 
                    class: "checkbox checkbox-primary", 
                    id: "event_performer_#{performer.id}" %>
                <div class="flex-1">
                  <div class="flex items-center gap-2">
                    <div class="avatar">
                      <div class="w-8 h-8 rounded-full">
                        <%= user_avatar_image(performer, size: :thumb, css_classes: "w-8 h-8 rounded-full object-cover") %>
                      </div>
                    </div>
                    <div>
                      <span class="label-text font-medium"><%= performer.name %></span>
                      <% if performer.genre.present? %>
                        <span class="badge badge-outline badge-sm ml-2"><%= performer.genre %></span>
                      <% end %>
                    </div>
                  </div>
                  <% if performer.bio.present? %>
                    <div class="text-xs text-base-content/70 mt-1 ml-10">
                      <%= truncate(performer.bio, length: 80) %>
                    </div>
                  <% end %>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="bg-base-200 border border-base-300 rounded-lg p-6 text-center">
          <svg class="mx-auto h-12 w-12 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <p class="mt-2 text-sm text-base-content/70">No performers available</p>
          <p class="text-xs text-base-content/50">Create performers first to assign them to events</p>
        </div>
      <% end %>
    </div>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Attendees</legend>
    
    <div class="form-control w-full">
      <%= form.label :user_ids, class: "label" do %>
        <span class="label-text">Select Attendees</span>
        <span class="label-text-alt">Choose regular users attending this event</span>
      <% end %>
      
      <% if User.non_performers.count > 0 %>
        <div class="bg-base-100 border border-base-300 rounded-lg p-4 max-h-64 overflow-y-auto">
          <div class="space-y-2">
            <% User.non_performers.each do |user| %>
              <label class="cursor-pointer label justify-start gap-3 p-2 hover:bg-base-200 rounded-lg transition-colors">
                <%= check_box_tag 'event[user_ids][]', user.id, 
                    event.users.include?(user), 
                    class: "checkbox checkbox-secondary", 
                    id: "event_user_#{user.id}" %>
                <div class="flex-1">
                  <div class="flex items-center gap-2">
                    <div class="avatar">
                      <div class="w-8 h-8 rounded-full">
                        <%= user_avatar_image(user, size: :thumb, css_classes: "w-8 h-8 rounded-full object-cover") %>
                      </div>
                    </div>
                    <div>
                      <span class="label-text font-medium"><%= user.name %></span>
                      <% if user.admin? %>
                        <span class="badge badge-accent badge-sm ml-2">Admin</span>
                      <% end %>
                    </div>
                  </div>
                  <% if user.email.present? %>
                    <div class="text-xs text-base-content/70 mt-1 ml-10">
                      <%= user.email %>
                    </div>
                  <% end %>
                </div>
              </label>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="bg-base-200 border border-base-300 rounded-lg p-6 text-center">
          <svg class="mx-auto h-12 w-12 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <p class="mt-2 text-sm text-base-content/70">No attendees available</p>
          <p class="text-xs text-base-content/50">Create regular users first to assign them as attendees</p>
        </div>
      <% end %>
    </div>
  </fieldset>

  <div class="flex justify-end mt-8 space-x-3">
    <%= link_to "Cancel", events_path, class: "btn btn-ghost" %>
    <button type="submit" class="btn btn-primary">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Save Event
    </button>
  </div>
<% end %>
