<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h1 class="mb-0"><%= @event.title %></h1>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-3"><strong>Date:</strong></div>
          <div class="col-sm-9"><%= @event.date&.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-3"><strong>Location:</strong></div>
          <div class="col-sm-9"><%= @event.location %></div>
        </div>
        
        <% if @event.description.present? %>
          <div class="row mb-3">
            <div class="col-sm-3"><strong>Description:</strong></div>
            <div class="col-sm-9"><%= simple_format(@event.description) %></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Users Section -->
    <div class="card mt-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Registered Users</h5>
        <%= link_to "Add User", new_event_user_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
      </div>
      <div class="card-body">
        <% if @event.users.any? %>
          <div class="list-group list-group-flush">
            <% @event.users.each do |user| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= user.name %></strong><br>
                  <small class="text-muted"><%= user.email %></small>
                </div>
                <%= link_to "View", user, class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">No users registered yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Performers Section -->
    <div class="card mt-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Performers</h5>
        <%= link_to "Add Performer", new_event_performer_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
      </div>
      <div class="card-body">
        <% if @event.performers.any? %>
          <div class="list-group list-group-flush">
            <% @event.performers.each do |performer| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= performer.name %></strong><br>
                  <small class="text-muted"><%= performer.genre %></small>
                </div>
                <%= link_to "View", performer, class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">No performers added yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Tips Section -->
    <div class="card mt-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Tips Received</h5>
        <%= link_to "Add Tip", new_event_tip_path(@event), class: "bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
      </div>
      <div class="card-body">
        <% if @event.tips.any? %>
          <div class="row">
            <div class="col-md-6">
              <h6 class="text-success">Total Tips: <%= @event.tips.sum(:amount) %> <%= @event.tips.first&.currency || 'USD' %></h6>
            </div>
            <div class="col-md-6">
              <h6 class="text-info">Number of Tips: <%= @event.tips.count %></h6>
            </div>
          </div>
          <div class="list-group list-group-flush mt-3">
            <% @event.tips.recent.limit(5).each do |tip| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong>
                    <% if tip.user %>
                      <%= tip.user.name %>
                    <% else %>
                      Unknown User
                    <% end %>
                  </strong> - <%= tip.formatted_amount %><br>
                  <small class="text-muted">
                    <%= tip.created_at.strftime('%B %d, %Y') %>
                    <% if tip.message.present? %>
                      - "<%= truncate(tip.message, length: 50) %>"
                    <% end %>
                  </small>
                </div>
                <%= link_to "View", tip, class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
              </div>
            <% end %>
          </div>
          <% if @event.tips.count > 5 %>
            <div class="mt-3">
              <%= link_to "View All Tips", event_tips_path(@event), class: "bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted">No tips received yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <%= link_to "Edit", edit_event_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition duration-200" %>
  <%= link_to "Back to Events", events_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded transition duration-200" %>
  <%= form_with model: @event, method: :delete, local: true, class: "d-inline" do |form| %>
    <%= form.submit "Delete", class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded transition duration-200 cursor-pointer",
                    onclick: "return confirm('Are you sure you want to delete this event?')" %>
  <% end %>
</div>
