<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h1 class="mb-0"><%= @event.title %></h1>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-3"><strong>Date:</strong></div>
          <div class="col-sm-9"><%= @event.date&.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
        
        <div class="row mb-3">
          <div class="col-sm-3"><strong>Location:</strong></div>
          <div class="col-sm-9"><%= @event.location %></div>
        </div>
        
        <% if @event.description.present? %>
          <div class="row mb-3">
            <div class="col-sm-3"><strong>Description:</strong></div>
            <div class="col-sm-9"><%= simple_format(@event.description) %></div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Users Section -->
    <div class="card mt-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Registered Users</h5>
        <%= link_to "Add User", new_user_path(event_id: @event.id), class: "btn btn-sm btn-outline-primary" %>
      </div>
      <div class="card-body">
        <% if @event.users.any? %>
          <div class="list-group list-group-flush">
            <% @event.users.each do |user| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= user.name %></strong><br>
                  <small class="text-muted"><%= user.email %></small>
                </div>
                <%= link_to "View", user, class: "btn btn-sm btn-outline-primary" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">No users registered yet.</p>
        <% end %>
      </div>
    </div>

    <!-- Performers Section -->
    <div class="card mt-4">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Performers</h5>
        <%= link_to "Add Performer", new_performer_path(event_id: @event.id), class: "btn btn-sm btn-outline-primary" %>
      </div>
      <div class="card-body">
        <% if @event.performers.any? %>
          <div class="list-group list-group-flush">
            <% @event.performers.each do |performer| %>
              <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= performer.name %></strong><br>
                  <small class="text-muted"><%= performer.genre %></small>
                </div>
                <%= link_to "View", performer, class: "btn btn-sm btn-outline-primary" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-muted">No performers added yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary" %>
  <%= link_to "Back to Events", events_path, class: "btn btn-secondary" %>
  <%= link_to "Delete", event_path(@event),
              class: "btn btn-danger",
              data: { 
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete this event?"
              } %>
</div>
