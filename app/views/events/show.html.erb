<div class="max-w-4xl mx-auto">
  <div class="bg-white shadow-sm rounded-lg overflow-hidden">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h1 class="text-2xl font-bold text-gray-900"><%= @event.title %></h1>
    </div>
    <div class="px-6 py-6">
      <dl class="space-y-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Date</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @event.date&.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        
        <div>
          <dt class="text-sm font-medium text-gray-500">Location</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @event.location %></dd>
        </div>
        
        <% if @event.description.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= simple_format(@event.description) %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- Users Section -->
  <div class="bg-white shadow-sm rounded-lg overflow-hidden mt-6">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Registered Users</h2>
        <%= link_to "Add User", new_event_user_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
    </div>
    <div class="px-6 py-4">
      <% if @event.users.any? %>
        <div class="space-y-3">
          <% @event.users.each do |user| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <div class="font-medium text-gray-900"><%= user.name %></div>
                <div class="text-sm text-gray-500"><%= user.email %></div>
              </div>
                <%= link_to "View", user, class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No users registered yet.</p>
      <% end %>
    </div>
  </div>

  <!-- Performers Section -->
  <div class="bg-white shadow-sm rounded-lg overflow-hidden mt-6">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Performers</h2>
        <%= link_to "Add Performer", new_event_performer_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
      </div>
      <div class="card-body">
      <% if @event.performers.any? %>
        <div class="space-y-3">
          <% @event.performers.each do |performer| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <div class="font-medium text-gray-900"><%= performer.name %></div>
                <div class="text-sm text-gray-500"><%= performer.genre %></div>
              </div>
                <%= link_to "View", performer, class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No performers added yet.</p>
      <% end %>
    </div>
  </div>

  <!-- Tips Section -->
  <div class="bg-white shadow-sm rounded-lg overflow-hidden mt-6">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 flex justify-between items-center">
      <h2 class="text-lg font-semibold text-gray-900">Tips Received</h2>
        <%= link_to "Add Tip", new_event_tip_path(@event), class: "bg-green-600 hover:bg-green-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
    </div>
    <div class="px-6 py-4">
      <% if @event.tips.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
          <div class="bg-green-50 p-4 rounded-lg">
            <div class="text-sm font-medium text-green-800">Total Tips</div>
            <div class="text-lg font-bold text-green-900"><%= @event.tips.sum(:amount) %> <%= @event.tips.first&.currency || 'USD' %></div>
          </div>
          <div class="bg-blue-50 p-4 rounded-lg">
            <div class="text-sm font-medium text-blue-800">Number of Tips</div>
            <div class="text-lg font-bold text-blue-900"><%= @event.tips.count %></div>
          </div>
        </div>
        <div class="space-y-3">
          <% @event.tips.recent.limit(5).each do |tip| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
              <div>
                <div class="font-medium text-gray-900">
                  <% if tip.user %>
                    <%= tip.user.name %>
                  <% else %>
                    Unknown User
                  <% end %>
                  - <%= tip.formatted_amount %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= tip.created_at.strftime('%B %d, %Y') %>
                  <% if tip.message.present? %>
                    - "<%= truncate(tip.message, length: 50) %>"
                  <% end %>
                </div>
              </div>
                <%= link_to "View", [@event, tip], class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
              </div>
            <% end %>
          </div>
        <% if @event.tips.count > 5 %>
          <div class="mt-4">
            <%= link_to "View All Tips", event_tips_path(@event), class: "bg-gray-600 hover:bg-gray-700 text-white text-sm font-medium py-1 px-3 rounded transition duration-200" %>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500">No tips received yet.</p>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-4">
  <%= link_to "Edit", edit_event_path(@event), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition duration-200" %>
  <%= link_to "Back to Events", events_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded transition duration-200" %>
  <%= form_with model: @event, method: :delete, local: true, class: "inline" do |form| %>
    <%= form.submit "Delete", class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded transition duration-200 cursor-pointer",
                    onclick: "return confirm('Are you sure you want to delete this event?')" %>
  <% end %>
</div>
