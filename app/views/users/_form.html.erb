<%= form_with(model: user, class: "space-y-6") do |form| %>
  <% if user.errors.any? %>
    <div role="alert" class="alert alert-error mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">
          <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
        </h3>
        <div class="text-sm">
          <ul class="list-disc list-inside space-y-1">
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Personal Information</legend>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="form-control w-full">
        <%= form.label :name, class: "label" do %>
          <span class="label-text">Full Name</span>
          <span class="label-text-alt">Required</span>
        <% end %>
        <%= form.text_field :name, class: "input input-bordered w-full", placeholder: "Enter full name" %>
      </div>
      
      <div class="form-control w-full">
        <%= form.label :image, "Profile Picture", class: "label" do %>
          <span class="label-text">Profile Picture</span>
          <span class="label-text-alt">Optional</span>
        <% end %>
        
        <% if user.image_data? %>
          <div class="mb-3">
            <%= image_tag user.image_url(:thumb), class: "w-24 h-24 rounded-full object-cover mb-2" %>
            <div class="text-sm text-gray-500">
              <%= form.check_box :remove_image, class: "checkbox checkbox-sm mr-1" %>
              <%= form.label :remove_image, "Remove image", class: "inline-block align-middle" %>
            </div>
          </div>
        <% end %>
        
        <%= form.file_field :image, 
                          class: "file-input file-input-bordered w-full",
                          accept: "image/jpeg,image/png,image/gif",
                          data: { controller: "image-preview", action: "change->image-preview#preview" } %>
        <div class="mt-2 text-xs text-gray-500">
          JPG, PNG or GIF (max 5MB)
        </div>
        
        <% if user.image_data? %>
          <%= form.hidden_field :image, value: user.cached_image_data, id: "user_image_cache" %>
        <% end %>
      </div>

      <div class="form-control w-full">
        <%= form.label :email, class: "label" do %>
          <span class="label-text">Email Address</span>
          <span class="label-text-alt">Required</span>
        <% end %>
        <%= form.email_field :email, class: "input input-bordered w-full", placeholder: "user@example.com" %>
      </div>
    </div>
  </fieldset>

  <fieldset class="fieldset">
    <legend class="fieldset-legend">Contact & Event</legend>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="form-control w-full">
        <%= form.label :phone, class: "label" do %>
          <span class="label-text">Phone Number</span>
          <span class="label-text-alt">Optional</span>
        <% end %>
        <%= form.text_field :phone, class: "input input-bordered w-full", placeholder: "(123) 456-7890" %>
      </div>

      <div class="form-control w-full">
        <%= form.label :event_ids, class: "label" do %>
          <span class="label-text">Events</span>
          <span class="label-text-alt">Optional - Select multiple events</span>
        <% end %>
        <div class="border border-base-300 rounded-lg max-h-60 overflow-y-auto">
          <ul class="menu menu-compact">
            <% @events.each do |event| %>
              <li>
                <label class="label cursor-pointer justify-start gap-3 px-4 py-3 hover:bg-base-200 rounded-lg">
                  <%= check_box_tag "user[event_ids][]", event.id, user.event_ids.include?(event.id), 
                      class: "checkbox checkbox-primary" %>
                  <div class="flex-1">
                    <div class="font-medium text-base-content"><%= event.title %></div>
                    <div class="text-sm text-base-content/70">
                      <%= event.date.strftime('%b %d, %Y') if event.date %>
                      <% if event.location.present? %>
                        â€¢ <%= event.location %>
                      <% end %>
                    </div>
                  </div>
                </label>
              </li>
            <% end %>
          </ul>
        </div>
        <%= hidden_field_tag "user[event_ids][]", "" %>
      </div>
    </div>
  </fieldset>

  <div class="flex justify-end mt-8 space-x-3">
    <%= link_to "Cancel", users_path, class: "btn btn-ghost" %>
    <button type="submit" class="btn btn-primary">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Save User
    </button>
  </div>
<% end %>
