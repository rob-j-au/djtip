<div class="container mx-auto p-4 md:p-8">
  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
        <div>
          <h1 class="card-title text-3xl md:text-4xl"><%= @user.name %></h1>
          <p class="text-sm opacity-70 mt-1">User Profile</p>
        </div>
        <div class="avatar placeholder">
          <div class="bg-neutral text-neutral-content rounded-full w-16 md:w-20">
            <span class="text-2xl"><%= @user.name[0].upcase %></span>
          </div>
        </div>
      </div>
      
      <div class="divider"></div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <h2 class="text-xl font-semibold flex items-center gap-2 mb-4">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              Personal Information
            </h2>
            <div class="space-y-4">
              <div>
                <p class="text-sm font-medium opacity-70">Email Address</p>
                <p class="font-medium"><%= @user.email %></p>
              </div>
              
              <% if @user.phone.present? %>
                <div>
                  <p class="text-sm font-medium opacity-70">Phone Number</p>
                  <p class="font-medium"><%= @user.phone %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="card bg-base-200">
          <div class="card-body p-4">
            <h2 class="text-xl font-semibold flex items-center gap-2 mb-4">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Event Information
            </h2>
            <div class="space-y-4">
              <div>
                <p class="text-sm font-medium opacity-70">Associated Events</p>
                <% if @user.events.any? %>
                  <div class="space-y-3">
                    <% @user.events.each do |event| %>
                      <div class="border border-base-300 rounded-lg p-3">
                        <p class="font-medium">
                          <%= link_to event.title, event, class: "link link-primary" %>
                        </p>
                        <p class="text-sm opacity-70 mt-1">
                          <%= event.date.strftime('%B %d, %Y at %I:%M %p') %>
                          <% if event.location.present? %>
                            <br>at <%= event.location %>
                          <% end %>
                        </p>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <p class="opacity-70">No events currently associated</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="divider"></div>
      
      <div class="flex flex-wrap justify-center gap-4">
        <%= link_to edit_user_path(@user), class: "btn btn-primary" do %>
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit Profile
        <% end %>
        
        <%= link_to users_path, class: "btn btn-ghost" do %>
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Users
        <% end %>
        
        <%= button_to @user, 
            method: :delete,
            class: "btn btn-outline btn-error",
            form: { 
              class: "inline-block m-0",
              data: { 
                turbo_confirm: "Are you sure you want to delete this user?",
                turbo_method: :delete 
              } 
            } do %>
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete User
        <% end %>
      </div>
    </div>
  </div>
</div>
