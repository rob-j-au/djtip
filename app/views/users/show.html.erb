<div class="row justify-content-center">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-header">
        <h1 class="mb-0"><%= @user.name %></h1>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Email:</strong></div>
          <div class="col-sm-8"><%= @user.email %></div>
        </div>
        
        <% if @user.phone.present? %>
          <div class="row mb-3">
            <div class="col-sm-4"><strong>Phone:</strong></div>
            <div class="col-sm-8"><%= @user.phone %></div>
          </div>
        <% end %>
        
        <div class="row mb-3">
          <div class="col-sm-4"><strong>Event:</strong></div>
          <div class="col-sm-8">
            <% if @user.event %>
              <%= link_to @user.event.title, @user.event, class: "text-decoration-none" %>
            <% else %>
              <span class="text-muted">No event assigned</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-4 text-center">
  <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
  <%= link_to "Back to Users", users_path, class: "btn btn-secondary" %>
  <%= form_with model: @user, method: :delete, local: true, class: "d-inline" do |form| %>
    <%= form.submit "Delete", class: "btn btn-danger",
                    onclick: "return confirm('Are you sure you want to delete this user?')" %>
  <% end %>
</div>
