<%= form_with(model: performer, class: "space-y-6") do |form| %>
  <% if performer.errors.any? %>
    <div role="alert" class="alert alert-error mb-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold">
          <%= pluralize(performer.errors.count, "error") %> prohibited this performer from being saved:
        </h3>
        <div class="text-sm">
          <ul class="list-disc list-inside space-y-1">
            <% performer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <fieldset class="border border-base-300 rounded-lg p-6 mb-6">
    <legend class="text-lg font-semibold px-2">Basic Information</legend>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="form-control w-full">
        <%= form.label :name, class: "label" do %>
          <span class="label-text">Performer Name</span>
          <span class="label-text-alt">Required</span>
        <% end %>
        <%= form.text_field :name, class: "input input-bordered w-full", placeholder: "Enter performer name" %>
      </div>

      <div class="form-control w-full">
        <%= form.label :genre, class: "label" do %>
          <span class="label-text">Genre</span>
          <span class="label-text-alt">Optional</span>
        <% end %>
        <%= form.text_field :genre, class: "input input-bordered w-full", placeholder: "e.g., Rock, Jazz, Hip-Hop" %>
      </div>
    </div>
  </fieldset>

  <fieldset class="border border-base-300 rounded-lg p-6 mb-6">
    <legend class="text-lg font-semibold px-2">Biography</legend>
    
    <div class="form-control w-full">
      <%= form.label :bio, class: "label" do %>
        <span class="label-text">Biography</span>
        <span class="label-text-alt">Tell us about the performer</span>
      <% end %>
      <%= form.text_area :bio, 
          rows: 4, 
          class: "textarea textarea-bordered h-32", 
          placeholder: "Enter performer's biography, background, or other relevant information" %>
    </div>
  </fieldset>

  <fieldset class="border border-base-300 rounded-lg p-6 mb-6">
    <legend class="text-lg font-semibold px-2">Contact & Event</legend>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="form-control w-full">
        <%= form.label :contact, class: "label" do %>
          <span class="label-text">Contact Information</span>
          <span class="label-text-alt">Email, phone, or manager</span>
        <% end %>
        <%= form.text_field :contact, 
            class: "input input-bordered w-full", 
            placeholder: "Email, phone, or manager details" %>
      </div>

      <div class="form-control w-full">
        <%= form.label :event_id, class: "label" do %>
          <span class="label-text">Associated Event</span>
          <span class="label-text-alt">Optional</span>
        <% end %>
        <%= form.select :event_id, 
                      options_from_collection_for_select(@events, :id, :title, performer.event_id),
                      { include_blank: "Select an event" },
                      { class: "select select-bordered w-full" } %>
      </div>
    </div>
  </fieldset>

  <div class="flex justify-end mt-8 space-x-3">
    <%= link_to "Cancel", performers_path, class: "btn btn-ghost" %>
    <button type="submit" class="btn btn-primary">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      Save Performer
    </button>
  </div>
<% end %>
