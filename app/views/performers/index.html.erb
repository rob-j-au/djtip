<div class="card bg-base-100 shadow-xl mb-8">
  <div class="card-body">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
      <div>
        <h1 class="card-title text-4xl">Performers</h1>
        <p class="text-base-content/70 mt-1">Manage and view all performers and artists</p>
      </div>
      <%= link_to "New Performer", new_performer_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% if @performers.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @performers.each do |performer| %>
      <div class="card bg-base-100 shadow-md hover:shadow-xl transition-shadow duration-200 border border-base-200">
        <div class="card-body p-6">
          <div class="flex justify-between items-start gap-4">
            <h3 class="card-title text-xl"><%= performer.name %></h3>
            <% if performer.genre.present? %>
              <div class="badge badge-primary"><%= performer.genre %></div>
            <% end %>
          </div>
          
          <% if performer.bio.present? %>
            <p class="text-base-content/80 mb-4"><%= truncate(performer.bio, length: 100) %></p>
          <% end %>
          
          <% if performer.event %>
            <div class="flex items-center text-sm">
              <svg class="w-4 h-4 mr-3 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span>Event: <%= link_to performer.event.title, performer.event, class: "link link-primary" %></span>
            </div>
          <% end %>
        </div>
        
        <div class="card-actions justify-end p-4 bg-base-200">
          <div class="flex gap-2 w-full">
            <%= link_to "View", performer, class: "btn btn-sm btn-ghost flex-1" %>
            <%= link_to "Edit", edit_performer_path(performer), class: "btn btn-sm btn-outline flex-1" %>
            <%= button_to "Delete", performer, method: :delete,
                          class: "btn btn-outline btn-error btn-sm flex-1",
                          form_class: "flex-1",
                          data: { 
                            confirm: "Are you sure you want to delete this performer?",
                            turbo_method: :delete 
                          } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body items-center text-center py-16">
      <svg class="w-16 h-16 text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
      </svg>
      <h3 class="card-title mt-4">No performers yet</h3>
      <p class="text-base-content/70 mb-6">Add your first performer to get started!</p>
      <%= link_to "Add Performer", new_performer_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
