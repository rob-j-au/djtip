<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h1 class="mb-0"><%= @performer.name %></h1>
        <span class="inline-block bg-gray-200 text-gray-800 text-sm px-2 py-1 rounded"><%= @performer.genre %></span>
      </div>
      <div class="card-body">
        <% if @performer.bio.present? %>
          <div class="row mb-3">
            <div class="col-sm-3"><strong>Bio:</strong></div>
            <div class="col-sm-9"><%= simple_format(@performer.bio) %></div>
          </div>
        <% end %>
        
        <% if @performer.contact.present? %>
          <div class="row mb-3">
            <div class="col-sm-3"><strong>Contact:</strong></div>
            <div class="col-sm-9"><%= @performer.contact %></div>
          </div>
        <% end %>
        
        <div class="row mb-3">
          <div class="col-sm-3"><strong>Event:</strong></div>
          <div class="col-sm-9">
            <% if @performer.event %>
              <%= link_to @performer.event.title, @performer.event, class: "text-decoration-none" %>
            <% else %>
              <span class="text-muted">No event assigned</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-4 text-center">
  <%= link_to "Edit", edit_performer_path(@performer), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition duration-200" %>
  <%= link_to "Back to Performers", performers_path, class: "bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded transition duration-200" %>
  <%= form_with model: @performer, method: :delete, local: true, class: "d-inline" do |form| %>
    <%= form.submit "Delete", class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded transition duration-200 cursor-pointer",
                    onclick: "return confirm('Are you sure you want to delete this performer?')" %>
  <% end %>
</div>
