<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= [@page_title, "Admin", "djtip"].compact.join(" | ") %></title>
  
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  
  <!-- Main application CSS (includes Tailwind and daisyUI) -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  
  <!-- Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.7.2/css/all.min.css" rel="stylesheet">
  
  <%= javascript_importmap_tags %>
  <%= content_for :head %>
</head>

<body class="bg-base-200 min-h-screen">
  <!-- Navigation -->
  <div class="navbar bg-primary text-primary-content shadow-lg">
    <div class="navbar-start">
      <div class="dropdown">
        <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"></path>
          </svg>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <%= render 'admin/shared/mobile_nav' %>
        </ul>
      </div>
      <%= link_to admin_root_path, class: "btn btn-ghost text-xl" do %>
        <i class="fas fa-tachometer-alt mr-2"></i>
        djtip Admin
      <% end %>
    </div>
    
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        <%= render 'admin/shared/desktop_nav' %>
      </ul>
    </div>
    
    <div class="navbar-end">
      <!-- Theme Toggle -->
      <label class="swap swap-rotate mr-4">
        <input type="checkbox" class="theme-controller" value="dark" />
        <svg class="swap-off fill-current w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/>
        </svg>
        <svg class="swap-on fill-current w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/>
        </svg>
      </label>
      
      <!-- User Menu -->
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full bg-primary-content text-primary flex items-center justify-center">
            <%= current_user.name.first.upcase %>
          </div>
        </div>
        <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
          <li class="menu-title">
            <span><%= current_user.name %></span>
          </li>
          <li><%= link_to "Main Site", root_path, class: "text-base-content" %></li>
          <li><%= link_to "Profile", edit_user_registration_path, class: "text-base-content" %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "text-error" %></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="drawer lg:drawer-open">
    <input id="drawer-toggle" type="checkbox" class="drawer-toggle" />
    
    <!-- Page Content -->
    <div class="drawer-content flex flex-col">
      <!-- Page Header -->
      <div class="bg-base-100 shadow-sm border-b border-base-300">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center py-6">
            <div>
              <h1 class="text-2xl font-bold text-base-content"><%= @page_title || "Admin" %></h1>
              <%= render 'admin/shared/breadcrumbs' if content_for?(:breadcrumbs) %>
            </div>
            <%= content_for :page_actions %>
          </div>
        </div>
      </div>
      
      <!-- Flash Messages -->
      <% if notice %>
        <div class="alert alert-success mx-4 mt-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      
      <% if alert %>
        <div class="alert alert-error mx-4 mt-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>
      
      <!-- Main Content Area -->
      <main class="flex-1 p-4">
        <div class="max-w-7xl mx-auto">
          <%= yield %>
        </div>
      </main>
    </div>
    
    <!-- Sidebar -->
    <div class="drawer-side">
      <label for="drawer-toggle" aria-label="close sidebar" class="drawer-overlay"></label>
      <aside class="min-h-full w-64 bg-base-100 border-r border-base-300">
        <%= render 'admin/shared/sidebar' %>
      </aside>
    </div>
  </div>

  <!-- Confirmation Dialog Modal -->
  <dialog class="modal" data-confirmation-dialog-target="modal" data-action="click->confirmation-dialog#closeOnOutsideClick">
    <div class="modal-box">
      <h3 class="font-bold text-lg" data-confirmation-dialog-target="title">Confirm Action</h3>
      <p class="py-4" data-confirmation-dialog-target="message">Are you sure you want to proceed?</p>
      <div class="modal-action">
        <button class="btn btn-ghost" data-confirmation-dialog-target="cancelButton" data-action="click->confirmation-dialog#cancel">Cancel</button>
        <button class="btn btn-error" data-confirmation-dialog-target="confirmButton" data-action="click->confirmation-dialog#proceed">Confirm</button>
      </div>
    </div>
  </dialog>

  <!-- Theme Controller Script -->
  <script>
    // Theme persistence
    const themeController = document.querySelector('.theme-controller');
    const savedTheme = localStorage.getItem('theme') || 'cupcake';
    
    document.documentElement.setAttribute('data-theme', savedTheme);
    if (savedTheme === 'dark') {
      themeController.checked = true;
    }
    
    themeController.addEventListener('change', function() {
      const theme = this.checked ? 'dark' : 'cupcake';
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    });
  </script>
</body>
</html>
