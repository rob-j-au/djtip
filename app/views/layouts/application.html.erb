<!DOCTYPE html>
<html data-theme="cupcake">
  <head>
    <title>DJ Tip App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    
    <!-- Flowbite for datepicker -->
    <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
    
    <!-- JavaScript -->
    <%= javascript_importmap_tags %>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
    
    <!-- Theme toggle script -->
    <script>
      // Check for saved theme preference or use system preference
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.setAttribute('data-theme', 'dark');
      } else {
        document.documentElement.setAttribute('data-theme', 'cupcake');
      }
    </script>
  </head>

  <body class="min-h-screen bg-base-100 text-base-content">
    <!-- Navbar -->
    <div class="navbar bg-base-100 shadow-lg sticky top-0 z-50">
      <div class="container mx-auto px-4">
        <div class="flex-1">
          <%= link_to root_path, class: "btn btn-ghost normal-case text-xl" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
            DJ Tip App
          <% end %>
        </div>
        
        <div class="flex-none hidden md:block">
          <ul class="menu menu-horizontal px-1 gap-2">
            <li><%= link_to "Events", events_path, class: "btn btn-ghost" %></li>
            <li><%= link_to "Performers", performers_path, class: "btn btn-ghost" %></li>
          </ul>
        </div>
        
        <!-- Mobile menu button -->
        <div class="flex md:hidden">
          <label for="mobile-menu-toggle" class="btn btn-square btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </label>
        </div>
        
        <!-- Desktop user menu -->
        <div class="hidden md:flex items-center gap-2">
          <% if user_signed_in? %>
            <div class="dropdown dropdown-end">
              <label tabindex="0" class="btn btn-ghost btn-circle avatar">
                <div class="w-10 rounded-full bg-primary text-primary-content flex items-center justify-center font-bold">
                  <%= current_user.email[0].upcase %>
                </div>
              </label>
              <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                <li><span class="text-sm opacity-70">Signed in as</span></li>
                <li><span class="text-sm font-semibold"><%= current_user.email %></span></li>
                <li class="menu-title">
                  <span>Account</span>
                </li>
                <li><%= link_to "Your Profile", edit_user_registration_path %></li>
                <li><%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "w-full text-left" %></li>
              </ul>
            </div>
          <% else %>
            <div class="flex items-center gap-2">
              <%= link_to "Log in", new_user_session_path, class: "btn btn-ghost" %>
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <input type="checkbox" id="mobile-menu-toggle" class="modal-toggle" />
    <div class="modal modal-bottom sm:modal-middle" role="dialog">
      <div class="modal-box">
        <h3 class="font-bold text-lg mb-4">Menu</h3>
        <ul class="menu p-0">
          <li><%= link_to "Events", events_path, class: "text-lg" %></li>
          <li><%= link_to "Users", users_path, class: "text-lg" %></li>
          <li><%= link_to "Performers", performers_path, class: "text-lg" %></li>
        </ul>
        
        <% if user_signed_in? %>
          <div class="divider">Account</div>
          <div class="flex items-center gap-3 p-4 bg-base-200 rounded-lg">
            <div class="avatar">
              <div class="w-12 rounded-full bg-primary text-primary-content flex items-center justify-center text-xl font-bold">
                <%= current_user.email[0].upcase %>
              </div>
            </div>
            <div>
              <p class="font-semibold"><%= current_user.email %></p>
              <div class="flex gap-2 mt-1">
                <%= link_to "Profile", edit_user_registration_path, class: "text-sm link link-primary" %>
                <span class="text-base-content/50">•</span>
                <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "text-sm link link-primary" %>
              </div>
            </div>
          </div>
        <% else %>
          <div class="divider">Account</div>
          <div class="flex flex-col gap-2">
            <%= link_to "Log in", new_user_session_path, class: "btn btn-primary btn-block" %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline btn-block" %>
          </div>
        <% end %>
        
        <div class="modal-action">
          <label for="mobile-menu-toggle" class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</label>
        </div>
      </div>
      <label class="modal-backdrop" for="mobile-menu-toggle">Close</label>
    </div>

    <main class="container mx-auto py-6 px-4">
      <% if notice %>
        <div class="alert alert-success mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= notice %></span>
        </div>
      <% end %>
      

      <% if alert %>
        <div class="alert alert-error mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span><%= alert %></span>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
