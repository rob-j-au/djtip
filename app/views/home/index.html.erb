<!-- Hero Section -->
<div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white rounded-lg shadow-lg p-8 mb-8">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome to DJ Tip App</h1>
    <p class="text-xl md:text-2xl text-blue-100 mb-8">Manage your DJ events, track tips, and connect with your audience</p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to "Create Event", new_event_path, class: "bg-white text-blue-600 hover:bg-gray-100 font-semibold py-3 px-6 rounded-lg transition duration-200" %>
      <%= link_to "View All Events", events_path, class: "border-2 border-white text-white hover:bg-white hover:text-blue-600 font-semibold py-3 px-6 rounded-lg transition duration-200" %>
    </div>
  </div>
</div>

<!-- Stats Section -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 text-center">
    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= @total_events %></h3>
    <p class="text-gray-600">Total Events</p>
    <%= link_to "Manage Events", events_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium mt-2 inline-block" %>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 text-center">
    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= @total_users %></h3>
    <p class="text-gray-600">Registered Users</p>
    <%= link_to "Manage Users", users_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium mt-2 inline-block" %>
  </div>

  <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 text-center">
    <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
      <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
      </svg>
    </div>
    <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= @total_performers %></h3>
    <p class="text-gray-600">Performers</p>
    <%= link_to "Manage Performers", performers_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium mt-2 inline-block" %>
  </div>
</div>

<!-- Recent Events Section -->
<% if @recent_events.any? %>
  <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6 mb-8">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Recent Events</h2>
      <%= link_to "View All", events_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <% @recent_events.each do |event| %>
        <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow duration-200">
          <h3 class="font-semibold text-gray-900 mb-2"><%= event.title %></h3>
          <p class="text-gray-600 text-sm mb-3"><%= truncate(event.description, length: 80) %></p>
          <div class="flex items-center text-xs text-gray-500 mb-3">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <%= event.date&.strftime("%b %d, %Y") %>
          </div>
          <%= link_to "View Details", event, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<!-- Quick Actions Section -->
<div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Quick Actions</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
    <%= link_to new_event_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
      <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-gray-900">New Event</h3>
        <p class="text-sm text-gray-600">Create a new DJ event</p>
      </div>
    <% end %>

    <%= link_to new_user_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
      <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-gray-900">Add User</h3>
        <p class="text-sm text-gray-600">Register a new user</p>
      </div>
    <% end %>

    <%= link_to new_performer_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
      <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-gray-900">Add Performer</h3>
        <p class="text-sm text-gray-600">Register a new performer</p>
      </div>
    <% end %>

    <%= link_to events_path, class: "flex items-center p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
      <div class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
      </div>
      <div>
        <h3 class="font-medium text-gray-900">View Reports</h3>
        <p class="text-sm text-gray-600">Check event analytics</p>
      </div>
    <% end %>
  </div>
</div>
